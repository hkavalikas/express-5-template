{
  "name": "express-5-template",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/api/index.ts --bundle --platform=node --outfile=dist/index.js",
    "dev": "concurrently \"esbuild src/api/index.ts --bundle --platform=node --outfile=dist/index.js --watch\" \"nodemon dist/index.js\"",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "lint": "eslint \"{src/**/*.ts,*.ts}\"",
    "lint:fix": "eslint \"{src/**/*.ts,*.ts}\" --fix",
    "format": "prettier --write \"{src/**/*.ts,*.ts}\"",
    "format:check": "prettier --check \"{src/**/*.ts,*.ts}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@libsql/client": "^0.5.2",
    "drizzle-orm": "^0.30.10",
    "express": "^5.0.0-beta.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "audit-ci": "^6.6.1",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.18.1",
    "esbuild": "^0.25.6",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "{src/**/*.ts,*.ts}": [
      "eslint --fix",
      "prettier --write",
      "jest --testPathPattern=src/__tests__"
    ]
  },
  "private": true
}
